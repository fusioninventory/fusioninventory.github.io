msgid ""
"      FIA_RELEASE\n"
"      FIA_TASK_DEPLOY_RELEASE\n"
"      FIA_TASK_ESX_RELEASE\n"
"      FIA_TASK_NETWORK_RELEASE\n"
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"      FIA_TASK_INVENTORY_RELEASE\n"
"      FIA_TASK_NETDISCOVERY_RELEASE\n"
"      FIA_TASK_NETINVENTORY_RELEASE\n"
"      FIA_TASK_WAKEONLAN_RELEASE\n"
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"      PRODUCT_VERSION_MAJOR\n"
"      PRODUCT_VERSION_MINOR\n"
"      PRODUCT_VERSION_RELEASE\n"
"      PRODUCT_VERSION_BUILD\n"
msgstr ""

#. type: Plain text
msgid "They are at the beginning of the file. Following the example,"
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"   -!define FIA_RELEASE \"2.2.5\"\n"
"   -!define FIA_TASK_DEPLOY_RELEASE \"2.0.2\"\n"
"   +!define FIA_RELEASE \"2.2.6\"\n"
"   +!define FIA_TASK_DEPLOY_RELEASE \"2.0.3\"\n"
